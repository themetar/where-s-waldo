<h1>High scores for <%= link_to @scene.title, play_path(@scene) %></h1>
<% if @pagination[:pages] > 1 %> 
<%= render "pagination" %>
<% end %> 
<ol start="<%= (@pagination[:page] - 1) * @pagination[:per_page] + 1 %>" class="scoreboard">
<% @scores.each_with_index do |score, i| %>
  <li id="<%= score.id %>">
    <span class="rank"><%= (@pagination[:page] - 1) * @pagination[:per_page] + i + 1 %></span>
    <%= render "score", score: score %>
  </li>
<% end %>
</ol>
<% if @pagination[:pages] > 1 %> 
<%= render "pagination" %>
<% end %> 
